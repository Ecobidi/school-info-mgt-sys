    <div class="row text-white">
      <div class="col-12 d-flex align-items-center justify-content-center">
        <div class="card text-center" style="max-width: 420px; width: 85%; background-image: linear-gradient(45deg, #780206, #061161) !important; background-repeat: repeat-x; margin-top: 3rem; border: none;">
          <div class="card-img overlap" style="top: -30px; position: relative;">
            <img class="mb-1" src="/images/logo.jpg" width="190" style="height: 112px; width: auto; border-radius: 50%;">
          </div>
          <div class="card-body">
            <div class="card-block">
              <h2 class="white mb-2 text-uppercase">Login</h2>
              <form action="/login" method="POST">
                <div class="form-group">
                  <div class="col-md-12">
                    <input value="admin" type="text" class="form-control" name="username" placeholder="Username" required>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-md-12">
                    <input value="admin" type="password" class="form-control" name="password" placeholder="Password" required>
                  </div>
                </div>

                <div class="form-group">
                  <div class="row">
                    <div class="col-md-12">
                      <div class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0 ml-3">
                        <input type="checkbox" class="custom-control-input" checked id="rememberme">
                        <label class="custom-control-label float-left white" for="rememberme">Remember Me</label>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-md-12">
                    <button type="submit" class="btn btn-primary btn-block btn-raised">Submit</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
          <div class="card-footer">
              <div class="float-left"><a (click)="onForgotPassword()" class="white">Recover Password</a></div>
              <!--<div class="float-right"><a (click)="onRegister()" class="white">New User?</a></div>-->
          </div>
            </div>
        </div>
    </div>
  </main>

  
  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>