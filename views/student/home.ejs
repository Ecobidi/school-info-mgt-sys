<%- include ('../partials/student-top') %>
<div class="jumbotron text-center">
  <h1 class="title">Welcome, <%= student.surname + " " + student.first_name + " " + student.middle_name %></h2>
</div>
<div class="row">
  <div class="col-12">
    <div>
      <% if (error_msg && error_msg.length > 0) { %>
        <div class="text-center alert alert-danger alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong><%= error_msg %></strong> 
        </div>
        <script>
          $(".alert").alert();
        </script>
      <% } %>
    </div>
    <div>
      <% if (success_msg && success_msg.length > 0) { %>
        <div class="text-center alert alert-success alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong><%= success_msg %></strong> 
        </div>
        <script>
          $(".alert").alert();
        </script>
      <% } %>
    </div>
  </div>

  <div class="col-lg-6 offset-lg-3">
    <div class="card text-left">
      <div class="card-body">
        <h4 class="card-title">Semester Course Registration</h4>
        <form class="form-inline" action="/student/register-semester-courses" method="GET">
         
          <div class="form-group w-100 mb-2">
            <label class="mr-3 justify-content-start" style="width: 65px;">Session</label>
            <select name="session" class="form-control" required style="flex: 1;">
              <option value="">-- Choose Session --</option>
              <option>2018/2019</option>
              <option>2019/2020</option>
              <option>2020/2021</option>
              <option>2021/2022</option>
            </select>
          </div>
          <div class="form-group w-100 mb-2">
            <label class="mr-3 justify-content-start" style="width: 65px;">Level</label>
            <select name="level" class="form-control" required style="flex: 1;">
              <option value="">-- Choose Level --</option>
              <option>ND 1</option>
              <option>ND 2</option>
              <option>HND 1</option>
              <option>HND 2</option>
            </select>
          </div>
          <div class="form-group w-100 mb-2">
            <label class="mr-3 justify-content-start" style="width: 65px;">Semester</label>
            <select name="semester" class="form-control" required style="flex: 1;">
              <option value="">-- Choose Semester --</option>
              <option>First Semester</option>
              <option>Second Semester</option>
            </select>
          </div>
          <div class="mt-2 d-flex justify-content-center w-100">
            <button type="submit" class="btn btn-primary">Proceed</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include ('../partials/student-bottom') %>