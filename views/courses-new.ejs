<%-include ("partials/top") %>
<div class="row space">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center border-bottom pb-2">
      <h4 class="page-title">New Course</h4>
    </div>
  </div> 
</div>

<div class="row">
<div class="col-12">

<form action="/courses/new" method="POST" class="card">

  <fieldset class="row card-body">
    <legend>Course Details</legend>
    <div class="form-group col-md-4">
      <label>Course Code: <strong class="text-danger">*</strong></label>
      <input required type="text" class="form-control" name="course_code" />
    </div>
    <div class="form-group col-md-6">
      <label>Course Title: <strong class="text-danger">*</strong></label>
      <input required type="text" class="form-control" name="course_title" />
    </div>
    <div class="form-group col-md-2">
      <label>Course Unit:</label>
      <input type="number" class="form-control" name="course_unit" />
    </div>
    <div class="form-group col-md-4">
      <label>Level: <strong class="text-info">*</strong></label>
      <select required class="form-control" name="level">
        <option value=''>-- Select Level --</option>
        <option>ND 1</option>
        <option>ND 2</option>
        <option>HND 1</option>
        <option>HND 2</option>
      </select>
    </div>
    <div class="form-group col-md-4">
      <label>Semester: <strong class="text-info">*</strong></label>
      <select required class="form-control" name="semester">
        <option value=''>-- Select Semester --</option>
        <option>First Semester</option>
        <option>Second Semester</option>
      </select>
    </div>
    
    <div class="form-group col-12">
      <label>Course Allocations (Tick the programmes of study that offer this course)</label>
      <div>
        <% programmes_of_study.forEach( p => { %>
        <span class="d-inline-block">
        <label class="badge badge-pill badge-light d-flex align-items-center mr-3 p-2" style="width: fit-content;">
          <input type="checkbox" name="programmes_of_study" value='<%= p.serial_number %>' style="height: 16px; width: 16px;" class="ml-2">
          <strong><%= p.name %></strong>
        </label>
        </span>
        <% } ) %>
      </div>
    </div>
  </fieldset>
  
  <div class="form-group mt-2">
    <button class="btn btn-primary form-control" type="submit">Submit</button>
  </div>
</form>

</div>

</div>

